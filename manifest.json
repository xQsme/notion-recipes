{
	"manifest_version": 2,
	"name": "Notion BBC Good Food Recipe Scraper",
	"version": "1.0",
	"description": "Parses recipes from BBC Good Food and creates a page for them in Notion.",
	"icons": {
		"48": "notion.png"
	},
	"browser_action": {
		"default_icon": {
			"48": "notion.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.bbcgoodfood.com/*"
			],
			"js": [
				"dist/index.js"
			]
		}
	],
	"background": {
		"scripts": [
			"dist/background.js"
		]
	},
	"permissions": [
		"activeTab",
		"*://*.bbcgoodfood.com/*"
	]
}